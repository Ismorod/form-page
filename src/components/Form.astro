<form class="form">
        <p>
            <label for="First name">First name</label>
            <input type="text" name="First name" placeholder="Thor" id="form-input-1"/>
        </p>

        <p>
            <label for="Surname"> Surname</label>
            <input type="text" name="Surname" placeholder="Odinson" id="form-input-2"/>
        </p>

        <p>
            <label for="Age">Age</label>
            <input type="number" name="Age" min="10" max="100" required="true" placeholder="However old an asgardian is." id="form-input-3"/>
        </p>

        <p>
            <label for="textarea-feedback">How was it?</label>
            <textarea id="form-feedback" name="textarea-feedback" rows="32" cols="32" spellcheck="true" lang="SE" placeholder="Thunderstruck, whoa, baby, baby"></textarea>
        </p>
        <button type="submit" class="form-submit-button">Send feedback 	&#128511;</button>
</form>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const inputs = document.querySelectorAll('input, textarea');

    inputs.forEach(input => {
      input.addEventListener('focus', () => {
        document.body.classList.add('lock-scroll');
        // Optional: center input in viewport
        setTimeout(() => {
          input.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }, 300);
      });

      input.addEventListener('blur', () => {
        document.body.classList.remove('lock-scroll');
      });
    });
  });
</script>